pre.code-block
  margin 1.2em 0
  position relative

  &:after
    color #7f8c8d
    font-size .75em
    font-style italic
    font-weight 600
    line-height 15px
    text-align right
    height 15px
    padding 5px 10px 0
    opacity .25
    transition opacity .4s ease
    position absolute
    top 0
    right 0

  &[data-lang=html]:after
    content 'HTML'

  &[data-lang=css]:after
    content 'CSS'

  &[data-lang=javascript]:after
  &[data-lang=js]:after
    content 'JavaScript'

  &[data-lang=typescript]:after
  &[data-lang=ts]:after
    content 'TypeScript'

  &[data-lang=php]:after
    content 'PHP'

  &[data-lang=java]:after
    content 'Java'

  &[data-lang=python]:after
  &[data-lang=py]:after
    content 'Python'

  &[data-lang=ruby]:after
    content 'Ruby'

  &[data-lang=sql]:after
    content 'SQL'

  &[data-lang=json]:after
    content 'JSON'

  &[data-lang=markdown]:after
  &[data-lang=md]:after
    content 'Markdown'

  &[data-lang=bash]:after
  &[data-lang=shell]:after
    content 'Shell'

  &[data-lang=diff]:after
  &[data-lang=patch]:after
    content 'Diff'

pre.code-block:hover:after
  opacity 1

.hljs
  background #f8f8f8
  color #525252
  font-size .85em
  line-height 1.5
  display block
  overflow-x auto
  padding 1em

.hljs-strong
  font-weight 600

.hljs-comment
.hljs-quote
.hljs-emphasis
  color #b3b3b3
  font-style italic

.hljs-attr
.hljs-attribute
.hljs-bullet
.hljs-built_in
.hljs-keyword
.hljs-section
.hljs-selector-id
.hljs-type
.hljs-class
  color #e96900

.hljs-tag
.hljs-doctag
.hljs-selector-tag
.hljs-name
.hljs-builtin-name
.hljs-link
.hljs-title
.hljs-meta
.hljs-subst
  color #2973b7

.hljs-symbol
.hljs-string
.hljs-regexp
.hljs-variable
.hljs-template-variable
  color #42b983

.hljs-literal
.hljs-number
  color #ae81ff

.hljs-deletion
  background #fdd

.hljs-addition
  background #dfd
